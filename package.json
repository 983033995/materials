{
  "name": "frontend-component-library",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "gulp build",
    "build:ui": "gulp buildUI",
    "build:utils": "gulp buildUtils",
    "build:vscode": "gulp buildVSCodePlugin",
    "build:vite": "gulp buildVitePlugin",
    "build:docs": "gulp buildDocs",
    "publish:ui": "gulp publishUI",
    "publish:utils": "gulp publishUtils",
    "publish:vscode": "gulp publishVSCodePlugin",
    "publish:vite": "gulp publishVitePlugin",
    "publish:all": "gulp publishAll",
    "storybook": "pnpm --filter @mylib/docs run storybook"
  },
  "devDependencies": {
    "pnpm": "^8.6.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vue": "^3.3.4",
    "element-plus": "^2.3.6",
    "@storybook/vue3": "^7.0.20",
    "@storybook/addon-essentials": "^7.0.20",
    "tsup": "^6.7.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-bump": "^3.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  }
}